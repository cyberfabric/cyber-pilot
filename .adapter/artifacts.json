{
  "version": "1.0",
  "project_root": "..",
  "rules": {
    "fdd-sdlc": {
      "format": "FDD",
      "path": "rules/sdlc"
    }
  },
  "systems": [
    {
      "name": "FDD",
      "rules": "fdd-sdlc",
      "artifacts": [
        { "name": "Product Requirements", "path": "architecture/PRD.md", "kind": "PRD", "traceability": "FULL" },
        { "name": "Overall Design", "path": "architecture/DESIGN.md", "kind": "DESIGN", "traceability": "FULL" },
        { "name": "ADR-0001: Initial Architecture", "path": "architecture/ADR/general/0001-fdd-fdd-adr-initial-architecture-v1.md", "kind": "ADR", "traceability": "FULL" },
        { "name": "ADR-0002: Adaptive FDD", "path": "architecture/ADR/general/0002-fdd-fdd-adr-adaptive-fdd-flow-driven-development-v1.md", "kind": "ADR", "traceability": "FULL" },
        { "name": "ADR-0003: Template-Centric", "path": "architecture/ADR/general/0003-fdd-fdd-adr-template-centric-architecture-v1.md", "kind": "ADR", "traceability": "FULL" },
        { "name": "Features Manifest", "path": "architecture/features/FEATURES.md", "kind": "FEATURES", "traceability": "FULL" }
      ],
      "codebase": [
        {
          "name": "FDD CLI",
          "path": "skills/fdd/scripts/fdd",
          "extensions": [".py"],
          "singleLineComments": ["#"],
          "multiLineComments": [{"start": "\"\"\"", "end": "\"\"\""}]
        },
        {
          "name": "Tests",
          "path": "tests",
          "extensions": [".py"],
          "singleLineComments": ["#"],
          "multiLineComments": [{"start": "\"\"\"", "end": "\"\"\""}]
        }
      ],
      "children": []
    }
  ]
}
