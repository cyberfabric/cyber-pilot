{
  "version": "1.1",
  "project_root": "..",
  "kits": {
    "cypilot-sdlc": {
      "format": "Cypilot",
      "path": "kits/sdlc",
      "artifacts": {
        "ADR": {
          "template": "{project_root}/kits/sdlc/artifacts/ADR/template.md",
          "examples": "{project_root}/kits/sdlc/artifacts/ADR/examples"
        },
        "DECOMPOSITION": {
          "template": "{project_root}/kits/sdlc/artifacts/DECOMPOSITION/template.md",
          "examples": "{project_root}/kits/sdlc/artifacts/DECOMPOSITION/examples"
        },
        "DESIGN": {
          "template": "{project_root}/kits/sdlc/artifacts/DESIGN/template.md",
          "examples": "{project_root}/kits/sdlc/artifacts/DESIGN/examples"
        },
        "FEATURE": {
          "template": "{project_root}/kits/sdlc/artifacts/FEATURE/template.md",
          "examples": "{project_root}/kits/sdlc/artifacts/FEATURE/examples"
        },
        "PRD": {
          "template": "{project_root}/kits/sdlc/artifacts/PRD/template.md",
          "examples": "{project_root}/kits/sdlc/artifacts/PRD/examples"
        }
      }
    }
  },
  "ignore": [
    {
      "reason": "Internal test fixtures contain synthetic/broken cpt markers and IDs",
      "patterns": [
        "tests/test_codebase.py",
        "tests/test_cli_integration.py",
        "tests/test_cli_py_coverage.py"
      ]
    }
  ],
  "systems": [
    {
      "name": "Cypilot",
      "slug": "cypilot",
      "kit": "cypilot-sdlc",
      "autodetect": [
        {
          "kit": "cypilot-sdlc",
          "system_root": "{project_root}",
          "artifacts_root": "architecture",
          "artifacts": {
            "PRD": {"pattern": "PRD.md", "traceability": "FULL", "required": false},
            "DESIGN": {"pattern": "DESIGN.md", "traceability": "FULL", "required": false},
            "DECOMPOSITION": {"pattern": "DECOMPOSITION.md", "traceability": "FULL", "required": false},
            "ADR": {"pattern": "ADR/**/*.md", "traceability": "FULL", "required": false},
            "FEATURE": {"pattern": "features/*.md", "traceability": "DOCS-ONLY", "required": false}
          },
          "codebase": [
            {
              "name": "Cypilot CLI",
              "path": "skills/cypilot/scripts/cypilot",
              "extensions": [".py"]
            },
            {
              "name": "Cypilot Tests",
              "path": "tests",
              "extensions": [".py"]
            }
          ]
        }
      ]
    },
    {
      "name": "Examples",
      "slug": "ex",
      "kit": "cypilot-sdlc",
      "artifacts_dir": "examples",
      "autodetect": [
        {
          "kit": "cypilot-sdlc",
          "system_root": "{project_root}/examples/$system",
          "artifacts_root": "{system_root}/architecture",
          "artifacts": {
            "PRD": {"pattern": "PRD.md", "traceability": "FULL"},
            "DESIGN": {"pattern": "DESIGN.md", "traceability": "FULL", "required": false},
            "DECOMPOSITION": {"pattern": "DECOMPOSITION.md", "traceability": "FULL", "required": false},
            "ADR": {"pattern": "ADR/**/*.md", "traceability": "FULL", "required": false},
            "FEATURE": {"pattern": "features/*.md", "traceability": "FULL", "required": false}
          },
          "codebase": [
            {
              "name": "Overwork Alert",
              "path": "{system_root}/src",
              "extensions": [".py"]
            },
            {
              "name": "Tests",
              "path": "{project_root}/tests",
              "extensions": [".py"]
            }
          ]
        }
      ]
    }
  ]
}
