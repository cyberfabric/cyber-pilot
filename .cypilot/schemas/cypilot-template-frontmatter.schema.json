{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/cypilot/cypilot-template-frontmatter.schema.json",
  "title": "Cypilot Template Frontmatter (Markdown)",
  "type": "object",
  "additionalProperties": false,
  "required": ["cypilot-template"],
  "properties": {
    "cypilot-template": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "kind"],
      "properties": {
        "version": {
          "type": "object",
          "additionalProperties": false,
          "required": ["major", "minor"],
          "properties": {
            "major": {"type": "integer", "minimum": 1},
            "minor": {"type": "integer", "minimum": 0}
          }
        },
        "kind": {
          "type": "string",
          "minLength": 1
        },
        "unknown_sections": {
          "type": "string",
          "enum": ["error", "warn", "allow"],
          "default": "warn"
        }
      }
    }
  }
}
